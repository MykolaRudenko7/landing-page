{
  "extends": ["stylelint-config-standard-scss"],
  "ignoreFiles": [
    "templates/default/TemplateName.module.scss",
    "src/styles/global.scss",
    "src/styles/variables.scss",
    "src/styles/mixins.scss",
    "src/components/Navbar/Navbar.module.scss",
    "src/components/ContactUsSection/ContactForm/ContactForm.module.scss",
    "src/components/ReviewsSection/SwiperReviewsCard/SwiperReviewsCard.module.scss"
  ],
  "rules": {
    "scss/load-no-partial-leading-underscore": null,
    "scss/dollar-variable-pattern": "^[a-z]+([a-zA-Z0-9]+)?$",
    "scss/at-import-partial-extension": "always",
    "no-duplicate-selectors": true,
    "property-no-vendor-prefix": null,
    "selector-max-compound-selectors": 3,
    "selector-class-pattern": [
      "^[a-z][a-zA-Z]+$",
      { "message": "Selector should be in camelCase" }
    ],
    "unit-allowed-list": [
      ["%", "deg", "rem", "vh", "vw", "ms", "fr"],
      { "message": "Use only %, deg, rem, vh, vw, fr or ms units" }
    ],
    "scss/percent-placeholder-pattern": null,
    "scss/at-mixin-pattern": null,
    "scss/no-global-function-names": null,
    "keyframes-name-pattern": null
  }
}
